<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/singleInfo_descriptionText"
        android:textSize="@dimen/infoTextSize"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent=".75"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/singleInfo_infoText"
        android:textSize="@dimen/infoTextSize"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent=".7"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/singleInfo_descriptionText"
        android:layout_marginTop="@dimen/view_spacing"
        android:paddingBottom="@dimen/view_spacing_listView"/>

    <Button
        android:id="@+id/singleInfo_button"
        android:text="Copy"
        android:textSize="@dimen/button_text_size"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent=".25"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/singleInfo_descriptionText"/>

</androidx.constraintlayout.widget.ConstraintLayout>